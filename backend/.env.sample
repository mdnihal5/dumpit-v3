# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_jwt_secret_min_32_characters_long
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# File Storage
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Critical for Password Reset)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_or_smtp_password
EMAIL_FROM=your_email@gmail.com
EMAIL_FROM_NAME=Dumpit App

# Payment Gateway
RAZORPAY_KEY_ID=your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# Security
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX=100
PASSWORD_RESET_EXPIRE=10 * 60 * 1000 # 10 minutes in milliseconds

# Mobile App Deep Linking
MOBILE_APP_SCHEME=dumpit
MOBILE_APP_DOMAIN=yourmobiledomain.com 